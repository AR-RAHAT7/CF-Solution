#include<bits/stdc++.h>
 
using namespace std;
 
int main()
{
    string S;
    int n;
    cin>>n;
    int i;
    for(i=0;i<n;i++)
    {
        cin>>S;
        if(S.size()>10)
        {
            cout<<S.at(0);
            cout<<S.size()-2;
            cout<<S.at(S.size()-1)<<endl;
        }
        else
            cout<<S<<endl;
    }
    return 0;
}
