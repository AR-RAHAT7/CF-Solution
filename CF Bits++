#include<bits/stdc++.h>
#include<ctype.h>
using namespace std;
 
int main()
{
    int n,i,x=0;
    string S;
    cin>>n;
    for(i=0;i<n;i++)
    {
        cin>>S;
        if(S.at(1)=='+')
        {
            x++;
        }
        else if(S.at(1)=='-')
        {
            x--;
        }
    }
    cout<<x<<endl;
    return 0;
}
